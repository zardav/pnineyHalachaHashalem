<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibNextPage"
            android:contentDescription="@string/NextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_down" />
        
        <ImageButton
            android:id="@+id/ibPreviousPage"
            android:contentDescription="@string/PreviousPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_up" />

        <ImageButton
            android:id="@+id/ibNext"
            android:contentDescription="@string/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_next_item" />

        <ImageButton
            android:id="@+id/ibPrevious"
            android:contentDescription="@string/Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 			android:src="@drawable/ic_action_previous_item" />

        <ImageButton
            android:id="@+id/ibFullScreen"
            android:contentDescription="@string/FullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_full_screen" />

        <ImageButton
            android:id="@+id/ibChapters"
            android:contentDescription="@string/Chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_view_as_list" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrFindOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/ibFindNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/NextPage"
            android:src="@drawable/ic_action_down" />

        <ImageButton
            android:id="@+id/ibFindPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:contentDescription="@string/PreviousPage"
            android:src="@drawable/ic_action_up" />
    </LinearLayout>
    
    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>